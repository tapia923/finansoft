@model PlanillajeColectivos.DTO.Contabilidad.planCuentas

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Creacion de Cuentas";
}

<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<link href="~/Content/css/chosen.css" rel="stylesheet" />
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <h3 style="text-align:center"><span class="label label-info">Creacion de Cuenta</span></h3>

    <div class="row">

        <div class="form-group col-sm-12 col-md-6 col-lg-3">


        </div>
        <div class="form-group col-sm-12 col-md-6 col-lg-3">

            <label class="control-label">Codigo De Cuenta:</label>
            @Html.EditorFor(model => model.codigo, new { htmlAttributes = new { @class = "form-control", @type = "number" } })
            @Html.ValidationMessageFor(model => model.codigo, "", new { @class = "text-danger" })

        </div>
        <div class="form-group col-sm-12 col-md-6 col-lg-3">

            <label class="control-label">Naturaleza:</label>
            <select class="form-control" id="naturaleza" name="naturaleza">
                <option value="">Seleccionar</option>
                <option value="D">DEBITO</option>
                <option value="C">CREDITO</option>

            </select>

            @Html.ValidationMessageFor(model => model.naturaleza, "", new { @class = "text-danger" })


        </div>

    </div>
    <div class="row">
        <div class="form-group col-sm-12 col-md-6 col-lg-3">


        </div>
        <div class="form-group col-sm-12 col-md-6 col-lg-6">

            <label class="control-label">Nombre Cuenta:</label>
            @Html.EditorFor(model => model.nombre, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.nombre, "", new { @class = "text-danger" })

        </div>


    </div>
    <div class="row">
        <div class="form-group col-sm-12 col-md-6 col-lg-3">

        </div>
        <div class="form-group col-sm-12 col-md-6 col-lg-2">
            <label class="control-label">RQ.Tercero:</label>
            <div class="checkbox">
                @Html.EditorFor(model => model.reqTercero)
                @Html.ValidationMessageFor(model => model.reqTercero, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group col-sm-12 col-md-6 col-lg-2">
            <label class="control-label">RQ.Costo:</label>
            <div class="checkbox">
                @Html.EditorFor(model => model.reqCosto)
                @Html.ValidationMessageFor(model => model.reqCosto, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group col-sm-12 col-md-6 col-lg-2">
            <label class="control-label">VAl.Saldo:</label>
            <div class="checkbox">
                @Html.EditorFor(model => model.validaSaldo)
                @Html.ValidationMessageFor(model => model.validaSaldo, "", new { @class = "text-danger" })
            </div>
        </div>

    </div>
    <div class="row">
        <div class="form-group col-sm-12 col-md-6 col-lg-3">

        </div>
        <div class="form-group col-sm-12 col-md-6 col-lg-3">

            <label class="control-label">Tipo de Cuenta:</label>
            <select class="form-control" id="TipoCuenta" name="TipoCuenta">
                <option value="">Seleccionar</option>
                <option value="CO">Corriente</option>
                <option value="AH">Ahorros</option>

            </select>

            @Html.ValidationMessageFor(model => model.TipoCuenta, "", new { @class = "text-danger" })


        </div>

        <div class="form-group col-sm-12 col-md-6 col-lg-3">
            <label class="control-label">Tipo:</label>
            <select class="form-control" id="tipo" name="tipo">
                <option value="">Seleccionar</option>
                <option value="AX">AX</option>
                <option value="MY">MY</option>

            </select>

            @Html.ValidationMessageFor(model => model.tipo, "", new { @class = "text-danger" })

        </div>
    </div>

    <div class="row">

        <div class="form-group col-sm-12 col-md-8 col-lg-5">

        </div>
        <div class="form-group col-sm-12 col-md-8 col-lg-1">

            <input type="submit" value="Crear Cuenta" class="btn btn-success" />

        </div>
        
        <div class="form-group col-sm-12 col-md-8 col-lg-2">

            <a class="btn btn-danger" href="/Contabilidad/planCuentasC">Cancelar</a>

        </div>


    </div>

</div>
}

