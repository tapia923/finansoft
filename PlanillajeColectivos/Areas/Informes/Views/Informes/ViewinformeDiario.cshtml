@{
    Layout = "~/Views/Shared/_Layout.cshtml";

}
<script src="//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
<link href="~/Content/css/jquery-ui.min.css" rel="stylesheet" />
<script src="~/Scripts/informeDiario.js"></script>
<div class="row">
    <button class="btn btn-success" id="btnReporte">Generar Reporte</button>
</div>
<br />
<div class="row">
    <div class="col-xs-12 col-md-6 col-sm-12 col-lg-6">
        <div class="card border-dark mb-3" style="max-width: 35rem;">
            <div class="card-header">GASTOS</div>
            <div class="card-body text-dark">
                <div class='row'>
                    <div class='col-xs-12 col-sm-12 col-md-12 col-lg-12'>
                        
                            @*CPalacios - problema en barra de desplazamiento
                                <div class="aaa">*@
                        <div id="comandos" style="margin-top:40px; margin-bottom:5px;">
                            <div>
                                <button type="button" class="btn" id="agregar" aria-label="Left Align">
                                    <i class="fa fa-plus-circle" aria-hidden="true"></i> Agregar gasto
                                </button>
                            </div>
                        </div>

                        <div class="table-responsive">
                            <table class="table table-bordered table-hover table-responsive" id="anotaciones" style="font-size: 13px;">
                                <thead>
                                    <tr>
                                       <th width="60%" class="columnatablaazul">Descripción</th>
                                       <th width="40%" class="columnatablaazul">Valor</th>
                                        <th></th>

                                    </tr>
                                </thead>
                                <tbody id="bodyfilas"></tbody>
                            </table>
                        </div>
                            
                            
                        
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xs-12 col-md-6 col-sm-12 col-lg-6">
        <div class="card border-dark mb-3" style="max-width: 35rem;">
            <div class="card-header">OTROS</div>
            <div class="card-body text-dark">
                <div class='row'>
                    <div class='col-xs-12 col-sm-12 col-md-12 col-lg-12'>

                        @*CPalacios - problema en barra de desplazamiento
            <div class="aaa">*@
                        <div id="comandos2" style="margin-top:40px; margin-bottom:5px;">
                            <div>
                                <button type="button" class="btn" id="agregarOtro" aria-label="Left Align">
                                    <i class="fa fa-plus-circle" aria-hidden="true"></i> Agregar otro
                                </button>
                            </div>
                        </div>

                        <div class="table-responsive">
                            <table class="table table-bordered table-hover table-responsive" id="anotacionesOtro" style="font-size: 13px;">
                                <thead>
                                    <tr>
                                        <th width="60%" class="columnatablaazul">Descripción</th>
                                        <th width="40%" class="columnatablaazul">Valor</th>
                                        <th></th>

                                    </tr>
                                </thead>
                                <tbody id="bodyfilasOtro"></tbody>
                            </table>
                        </div>



                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
