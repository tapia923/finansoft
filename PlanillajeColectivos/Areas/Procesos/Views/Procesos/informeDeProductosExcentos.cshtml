@model IEnumerable<PlanillajeColectivos.DTO.Products.products>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "VENTA DE PRODUCTOS EXCENTOS";
}

<table id="myTable" class="table table-striped table-bordered table-responsive">
    <thead>
        <tr>
            <th>
                NOMBRE
            </th>
            <th>
                FECHA
            </th>
            <th>
                # FACTURA
            </th>
            <th>
                CANTIDAD
            </th>
            <th>
                VALOR
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.detalleIva)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.barcode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.inventaryMin)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.priceIn)
            </td>
        </tr>
        }
    </tbody>
</table>

