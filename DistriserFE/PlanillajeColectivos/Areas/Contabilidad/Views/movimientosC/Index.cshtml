@model IEnumerable<PlanillajeColectivos.DTO.Contabilidad.comprobante>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Comprobantes";

}





    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table id="myTable" class="table table-striped table-bordered table-responsive">
        <thead>
            <tr>
                <th>
                    TIPO COMPROBANTE
                </th>
                <th>
                    CONSECUTIVO
                </th>
                <th>
                    CENTRO DE COSTO
                </th>
                <th>
                    DETALLE
                </th>
                <th>
                    TERCERO
                </th>
                <th>
                    VALOR TOTAL
                </th>
                <th>
                    AÑO
                </th>
                <th>
                    MES
                </th>
                <th>
                    DIA
                </th>
                <th>
                    FECHA DE CREACIÓN
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.tipoComprobante)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.numero)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.centroCosto.nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.detalle)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.persons.name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.valorTotal)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.anio)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.mes)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.dia)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.fechaCreacion)
                    </td>
                    
                    <td>
                        @*@Html.ActionLink("Edit", "Edit", new { id = item.id }) |*@
                        @Html.ActionLink("Ver", "verComprobante", new { id = item.id })
                        @*@Html.ActionLink("Delete", "Delete", new { id = item.id })*@
                    </td>
                </tr>
            }
        </tbody>

        

    </table>



@section scripts
{

    <script>
        $(document).ready(function () {
            $('#myTable').DataTable({
                "language": {
                    "url": "/Content/Spanish.json"
                }
            });
        });
    </script>
}